---
// src/components/astro/Navbar.astro

import ArrowUpRightIcon from '../icons/ArrowUpRightIcon.astro';
import MobileMenu from '../react/MobileMenu';

interface MenuItem {
  href: string;
  label: string;
  isActive?: boolean;
}

const menuItems: MenuItem[] = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'Work' },
  { href: '/projects', label: 'About' },
  { href: '/contact', label: 'Careers' },
  { href: '/contact', label: 'Blog' },
];

const currentPath = Astro.url.pathname;
---

<nav
  class="mx-auto flex max-w-[1440px] items-center justify-between border-b border-gray-300 px-10 py-6 md:px-16"
  aria-label="Główna nawigacja"
>
  <a href="/" class="flex items-center">
    <img src="/assets/logo.png" alt="Logo" class="h-8 w-auto" />
  </a>

  <ul class="hidden items-center gap-6 md:flex">
    {
      menuItems.map((item) => (
        <li>
          <a
            href={item.href}
            class={`text-base font-normal transition-colors duration-300 ease-in-out hover:text-black ${
              currentPath === item.href ? 'font-semibold text-black' : 'text-gray-custom'
            }`}
            aria-current={currentPath === item.href ? 'page' : undefined}
          >
            {item.label}
          </a>
        </li>
      ))
    }
  </ul>

  <a
    href="/contact"
    class="btn btn-neutral btn-md md:btn-md hidden gap-2 rounded-full text-sm font-normal normal-case transition-transform hover:scale-105 md:flex md:font-medium"
  >
    Let's talk
    <ArrowUpRightIcon class="h-4 w-4 md:h-5 md:w-5" />
  </a>
  <MobileMenu client:media="(max-width: 767px)" menuItems={menuItems} currentPath={currentPath} />
</nav>
