<section
  class="relative isolate mx-auto mt-2 flex max-w-[1320px] flex-col items-center justify-center gap-8 px-5 py-20 text-center"
>
  <div
    class="rounded-full bg-[#F2F7F7] px-4 py-2 text-xs font-medium text-gray-700 shadow-sm md:text-sm"
  >
    <span>WHO WE WORK WITH</span>
  </div>

  <div
    id="partners"
    class="grid w-full grid-cols-2 items-center justify-center gap-2 md:grid-cols-4"
  >
    <div
      class="partner-card flex h-[100px] items-center justify-center rounded-2xl bg-white p-5"
      data-order="1"
    >
      <img src="/assets/partner3.png" alt="Partner 1" class="object-contain" />
    </div>
    <div
      class="partner-card flex h-[100px] items-center justify-center rounded-2xl bg-white p-5"
      data-order="2"
    >
      <img src="/assets/partner4.png" alt="Partner 2" class="object-contain" />
    </div>
    <div
      class="partner-card flex h-[100px] items-center justify-center rounded-2xl bg-white p-5"
      data-order="3"
    >
      <img src="/assets/partner2.png" alt="Partner 3" class="object-contain" />
    </div>
    <div
      class="partner-card flex h-[100px] items-center justify-center rounded-2xl bg-white p-5"
      data-order="4"
    >
      <img src="/assets/partner1.png" alt="Partner 4" class="object-contain" />
    </div>
  </div>

  <script>
    (function () {
      if (typeof window === 'undefined' || !('IntersectionObserver' in window)) return;
      const section = document.getElementById('partners');
      if (!section) return;
      const cards = Array.from(section.querySelectorAll('.partner-card'));
      const observer = new IntersectionObserver(
        (entries, obs) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              cards.forEach((card, i) => {
                setTimeout(() => card.classList.add('visible'), i * 200);
              });
              obs.unobserve(section);
            }
          });
        },
        { root: null, rootMargin: '0px', threshold: 0.2 }
      );
      observer.observe(section);
    })();
  </script>
</section>
